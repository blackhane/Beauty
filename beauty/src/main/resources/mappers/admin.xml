<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace = mapper파일의 아이디 값 -->
<mapper namespace="kr.co.beauty.dao.AdminDAO">
	<!-- 상품 등록 -->
	<insert id="insertProduct">
		insert into `product` set
		`prodCate1`=#{prodCate1},
		`prodCate2`=#{prodCate2},
		`prodName`=#{prodName},
		`descript`=#{descript},
		`price`=#{price},
		`discount`=#{discount},
		`disPrice`=#{disPrice},
		`stock`=#{stock},
		`company`=#{company},
		`origin`=#{origin},
		`rdate`=#{rdate},
		`color`=#{color},
		`status`=#{status},
		`size`=#{size},
		`thick`=#{thick},
		`through`=#{through},
		`lining`=#{lining},
		`flex`=#{flex},
		`thumb1`=#{thumb1},
		`thumb2`=#{thumb2},
		`thumb3`=#{thumb3},
		`thumb4`=#{thumb4},
		`thumb5`=#{thumb5},
		`thumb6`=#{thumb6},
		`detail1`=#{detail1},
		`detail2`=#{detail2},
		`detail3`=#{detail3};
	</insert>
	
	<!-- 관리자 페이지에서 상품 목록 불러오기 -->
	<select id="selectProducts" resultType="kr.co.beauty.vo.Product1VO">
		select * from `product` order by ${param1} desc;
	</select>
	<!-- 관리자 페이지에서 대분류로 나뉜 상품 목록 불러오기 -->
	<select id="selectProductByCate1" resultType="kr.co.beauty.vo.Product1VO">
		select * from `product` where `prodCate1`=#{arg1} order by ${param1} desc;
	</select>
	<!-- 관리자 페이지에서 체크된 소분류 상품 목록 불러오기 -->
	<select id="selectProductByCheckBox" resultType="Product1VO">
		select * from `product`
		<where>
			<if test="checkBoxArr != null and checkBoxArr.size() > 0">
			and `prodCate2` in
			<foreach item="checkBox" collection="checkBoxArr" open="(" separator="," close=")">#{checkBox}</foreach>
			</if>
		</where>
	</select>
</mapper>