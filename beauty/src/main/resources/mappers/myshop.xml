<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 김동근 -->
<mapper namespace="kr.co.beauty.dao.MyshopDAO">
	
	<!-- 카트 -->
	<select id="selectCartList" resultType="CartVO">
		SELECT * FROM `cart` WHERE email=#{email};
	</select>
	
	<delete id="deleteSelectedCart">
		DELETE FROM `cart` WHERE `cartNo`=#{cartNo};
	</delete>
	<delete id="deleteAllCart">
		DELETE FROM `cart` WHERE `email`=#{email};
	</delete>
	
	<select id="checkCountForUpdate" resultType="int">
		SELECT `count` FROM `cart`
		WHERE cartNo = #{cartNo};
	</select>
	<update id="cartIncrease">
		UPDATE `cart` SET
		count = count + 1
		WHERE cartNo = #{cartNo};
	</update>
	<update id="cartDecrease">
		UPDATE `cart` SET
		count = count - 1
		WHERE cartNo = #{cartNo};
	</update>
	
	
	<!-- 위시리스트 -->
	<insert id="addWish">
		INSERT INTO `wish` 
		SET `prodNo`=#{prodNo},
			`email` =#{email},
			`count` =#{count},
			`rdate` = NOW();
	</insert>
	
	<select id="selectWishlist" resultType="WishVO">
		SELECT A.*, B.prodName, B.price, B.disPrice, B.thumb1 
		FROM `wish` as A JOIN `product` as B 
		ON A.prodNo = B.prodNo 
		WHERE A.email = #{email};
	</select>

	<delete id="deleteSelectedWish">
		DELETE FROM `wish` WHERE `wishNo`=#{wishNo};
	</delete>
	<delete id="deleteAllWish">
		DELETE FROM `wish` WHERE `email`=#{email};
	</delete>

</mapper>